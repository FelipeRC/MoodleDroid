<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.felipetcc.moodledroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.felipetcc.moodledroid.view.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.felipetcc.moodledroid.view.LoginActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.felipetcc.moodledroid.view.HomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.felipetcc.moodledroid.view.NoticiasActivity"
            android:label="@string/title_activity_noticias" >
        </activity>
        <activity
            android:name="com.felipetcc.moodledroid.view.CursosActivity"
            android:label="@string/title_activity_cursos" >
        </activity>
        <activity
            android:name="com.felipetcc.moodledroid.view.PerfilActivity"
            android:label="@string/title_activity_perfil" >
        </activity>
        
    </application>
    
</manifest>
